{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "providers"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Registry version"
    },
    "baseUrl": {
      "type": "string",
      "description": "Base URL for GitHub Pages (e.g., https://mavdol.github.io/pankai-public-registry)"
    },
    "providers": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["provider", "url"],
        "properties": {
          "provider": {
            "type": "string",
            "description": "Provider identifier (e.g., llama, anthropic)"
          },
          "url": {
            "type": "string",
            "description": "URL to the provider configuration file. Can use {{baseUrl}} placeholder."
          }
        }
      }
    }
  }
}
